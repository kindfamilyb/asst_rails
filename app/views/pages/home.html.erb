<div class="grid grid-cols-1 gap-4">
    <% if current_user %>
        <ul>
            <li><%= link_to "hanguk", hanguk_account_path %></li>
            <li><%= link_to "Signal", signals_index_path %></li>
            <% if @api_keys.present? %>
                <% @api_keys.each do |api_key| %>
                    <li><%= link_to api_key.platform, upbit_accounts_path %></li>
                <% end %>
            <% end %>
            <li><%= link_to "setting", settings_index_path %></li>
        </ul>
    <% else %>
        <%= link_to "Login", new_user_session_path %>
    <% end %>
</div>



