<div id="api-key-section">
  <% if upbit_api_setting.present? %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">API 키 정보</h5>
        <div class="mb-3">
          <label class="form-label">Access Key</label>
          <p class="form-control-static"><%= upbit_api_setting.access_key %></p>
        </div>
        <div class="mb-3">
          <label class="form-label">Secret Key</label>
          <p class="form-control-static"><%= upbit_api_setting.secret_key %></p>
        </div>
        <button type="button" class="btn btn-primary" onclick="toggleEditForm()">
          수정하기
        </button>
      </div>
    </div>
  <% else %>
    <div class="alert alert-info">
      등록된 API 키가 없습니다.
    </div>
  <% end %>
</div> 